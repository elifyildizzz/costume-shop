// backend/prisma/schema.prisma
generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model User {
  id        Int       @id @default(autoincrement())
  email     String    @unique
  password  String
  firstName String
  lastName  String
  favorites Favorite[]
}

model Costume {
  id        Int       @id @default(autoincrement())
  name      String
  price     String
  image     String
  colors    String
  size      String
  favorites Favorite[]
}

model Favorite {
  id           Int       @id @default(autoincrement())
  user         User      @relation(fields: [userId], references: [id])
  userId       Int

  costume      Costume?  @relation(fields: [costumeId], references: [id])
  costumeId    Int?

  accessory    Accessory? @relation(fields: [accessoryId], references: [id])
  accessoryId  Int?

  createdAt    DateTime  @default(now())

  @@unique([userId, costumeId, accessoryId])
}

model Accessory {
  id        Int        @id @default(autoincrement())
  name      String
  price     String
  image     String
  colors    String     // <-- Düzeltildi: String[]
  // ... diğer alanlar
  favorites Favorite[]
}